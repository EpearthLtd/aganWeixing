 .button {
   width: 47vw;
   height: 48vw;
   background-color: #FFF;
   font-size: small;
   float: left;
 }

 .button-bg-gray {
   margin: 20rpx 23rpx;
 }

 .buttonImage {
   width: 100rpx;
   height: 100rpx;
   display: block;
 }

 .buttonMain {
   height: 240rpx;
   width: 240rpx;
   color: #FFF;
   background-color: #FF9326;
   border: 10rpx solid #FFAA40;
   border-radius: 50%;
   overflow: auto;
   margin: auto;
   position: absolute;
   top: 0; bottom: 0; left: 0; right: 0;
   z-index: 10;
 }
