.userinfo{
  width: 100vw;
  height: 400rpx;
  padding: 20rpx 0;
  overflow: hidden;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 0 60rpx;
  border-radius: 50%;
  float: right;
}

.userNickName {
  line-height: 150rpx;
  font-size: 50rpx;
  margin-left: 60rpx;
}

.userRealName {
  margin: 5rpx 10rpx;
  height: 45rpx;
  color: #F2F2F2;
  font-size: small;
  float: left;
}

.userVerify {
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  font-size: xx-small;
  margin-top: 10rpx;
  margin-right: 200rpx;
  float: left;
}
