<view class="weui-cells">
  <view class="weui-cell">
    <view class="weui-cell__bd">姓名</view>
    <view class="weui-cell__ft">{{personalInfo.realname!=null?personalInfo.realname:'未报名'}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">身份证号</view>
    <view class="weui-cell__ft">{{personalInfo.idcard!=null?personalInfo.idcard:'未绑定身份信息'}}</view>
  </view>
  <view class="weui-cell" wx:if="{{personalInfo.schoolName!=null}}">
    <view class="weui-cell__bd">学校</view>
    <view class="weui-cell__ft">{{personalInfo.schoolName}}</view>
  </view>
</view>

<view class="weui-cells">
  <view class="weui-cell" wx:if="{{personalInfo.siteId!=null}}">
    <view class="weui-cell__bd">练车场</view>
    <view class="weui-cell__ft">{{personalInfo.siteName}}</view>
  </view>
  <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" wx:if="{{personalInfo.vehicle_type!=null}}">
    <view class="weui-cell__bd">驾照</view>
    <view class="weui-cell__ft">{{car_type[personalInfo.vehicle_type]}}</view>
  </view>
  <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" wx:if="{{personalInfo.status!=null}}">
    <view class="weui-cell__bd">进度</view>
    <view class="weui-cell__ft">{{car_status[personalInfo.status]}}</view>
  </view>
</view>

<view class="weui-cells">
  <navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active" url='phone/phone'>
    <view class="weui-cell__bd">手机</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">{{personalInfo.tel!=null?personalInfo.tel:'请绑定手机'}}</view>
  </navigator>
</view>