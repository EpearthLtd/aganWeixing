<!--个人信息-->
<view class='userinfo wrapper bg-white'>
  <view class='cell pd-20 flex-out'>
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class='button-80'> 微信登录 </button>
    <block wx:else>
      <image class="userinfo-avatar flex-in" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class='userNickName'>{{userInfo.nickName}}</text>
    </block>
  </view>
</view>

<!--联系官方-->
<view class='col-100 mg-top-20'>
  <view class='button-setting' wx:for='{{userBooking}}' wx:key='key' bindtap='{{item.bindtap}}'>
    <text class='{{item.className}}'>{{item.text}}</text>
    <text class='icon-right {{item.className}}'>〉</text>
  </view>
</view>

<!--关联小程序-->
<view class='col-100 mg-top-20'>
  <view class='button-setting' wx:for='{{miniProgram}}' wx:key='miniProgram' bindtap='{{item.bindtap}}'>
    <text class='{{item.className}}'>{{item.text}}</text>
    <text class='icon-right {{item.className}}'>〉</text>
  </view>
</view>

<!--联系官方-->
<view class='col-100 mg-top-20'>
  <view class='button-setting' wx:for='{{other}}' wx:key='other' bindtap='{{item.bindtap}}'>
    <text class='{{item.className}}'>{{item.text}}</text>
    <text class='icon-right {{item.className}}'>〉</text>
  </view>
</view>

<!--客服-->
<view class='col-100 mg-top-20'>
  <view class='contacButtonView' wx:for='{{connectButton}}' wx:key='key'>
    <button open-type="{{item.openType}}" class='contacButton'>
      <text class='fl-left button-text {{item.className}}'>{{item.text}}</text>
      <text class='icon-right {{item.className}}'>〉</text>
    </button>
  </view>
</view>
